---
import Button from "../components/Button.astro";
const {title} = Astro.props;
---

<div class="frame">
    
    <h2>{title}</h2>
        <slot/>
        <Button class="button" title="learn more!"/>
    </div> 
<style>
    .frame {
        border: 2px solid black;
        border-radius: 10px;
        padding: 1rem;
        max-width: 400px;
        display: flex;
        flex-direction: column;
         box-shadow: 0 0 10px rgba(0, 0, 0, 0.409);

    }
    h2 {
        margin: 0;
        border: 2px solid black;
        border-radius: 25px;
        color: black;
        padding: .5rem;
        text-align: center;
    }


    }

</style>