---
const{title}=Astro.props;
---
<div class="card">
    <h1>{title}</h1>
    <slot/>
<style>
    .card{
    display: flex;
    flex-direction: column;
    text-align:justify;
    box-shadow: 0 0 10px rgba(0, 0, 0, 0.409);
    background-color: rgb(0, 0, 0);
    color: white;
    border-radius: 20px;
    border-top-right-radius: 100px;
    padding: 20px;
    margin-top: 10px;
    margin: 10px;
    }
    h1 {
        font-size: 1.5rem;
        margin: 0;
        border: 2px solid white;
        border-radius: 20px;
        border-top-right-radius: 100px;
        color: white;
        padding: 1rem;
        margin-bottom: 1rem;

    }
    slot {
        font-size: 1rem;
    }

    </style>