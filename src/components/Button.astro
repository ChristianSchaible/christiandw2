---
const {title="Button",href="/"} = Astro.props;
---

<a class="btn-home" href={href}>{title}</a>
<style>
    .btn-home {
    display: flex;
    width: fit-content;
    background-color: black;
    color: white;
    text-decoration: none;
    border-radius: 25px;
    padding: 8px 16px;
    margin-top: 10px;
    box-shadow: 0 0 10px rgba(0, 0, 0, 0.409);
    }

  .btn-home:hover {
    background-color: white;
    border: 2px solid black;
    color: black;
  }
}
    </style>